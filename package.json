{
  "name": "zod",
  "version": "3.0.0-alpha.18",
  "description": "TypeScript-first schema declaration and validation library with static type inference",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/zod.esm.js",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/zod.esm.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/colinhacks/zod"
  },
  "author": "Colin McDonnell <colin@colinhacks.com>",
  "license": "MIT",
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/colinhacks/zod/issues"
  },
  "homepage": "https://github.com/colinhacks/zod",
  "funding": "https://github.com/sponsors/colinhacks",
  "support": {
    "backing": {
      "npm-funding": true
    }
  },
  "keywords": [
    "typescript",
    "schema",
    "validation",
    "type",
    "inference"
  ],
  "devDependencies": {
    "@types/node": "^14.14.10",
    "husky": "^4.3.4",
    "nodemon": "^2.0.2",
    "ts-node": "^9.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "4.1"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf deno/lib/* dist/*",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "build": "npm run build:pkg && npm run build:deno",
    "build:pkg": "tsdx build",
    "build:deno": "rm -rf deno/lib/* && node ./deno/build.mjs",
    "play": "nodemon -e ts -w . -x ts-node src/playground.ts --project tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --fix && yarn build:deno"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}